<h1>Editing Book</h1>

<%= form_with model: @book, url: update_book_path(@book.id), method: :patch do |f| %>

  <div class="field">
    <label for="book_title">Title</label>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <label for="book_body">Title</label>
    <%= f.text_area :body %>
  </div>

  <%= f.submit 'Update Book' %>

<% end %>

<!--showへ-->
<%= link_to "Show", show_book_path(@book.id) %>
<!--indexへ-->
<%= link_to "Back", "/books" %>
