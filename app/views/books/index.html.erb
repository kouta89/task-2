<!--index-->
<h1>Books</h1>

<table>

  <thead>
    <tr>
      <th class="title_width">Title</th>
      <th class="body_width">Body</th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>

        <!--showへ-->
        <td><%= link_to "Show",show_book_path(book.id) %></td>
        <!--editへ-->
        <td><%= link_to "Edit", edit_book_path(book.id) %></td>
        <!--destroyへ-->
        <td><%= link_to "Destroy", destroy_book_path(book.id),method: :delete,"data-confirm" => "Are you sure?" %></td>

      </tr>
    <% end %>
  </tbody>

</table>


<!--new-->
<h2>New book</h2>

<!--エラー-->
<% if @book.errors.any? %>

  <div class="error_message">
    <h2><%= @book.errors.count %> errors prohibited this book from being saved:</h2>

    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>

  </div>
<% end %>

<%= form_with model: @book,url: '/books',method: :post do |f| %>

  <% if @book.errors.any? %>

    <div class="error_field">
      <span class="book">Title</span>
      <div class="book_input"><%= f.text_field :title %></div>

      <span class="book">Body</span>
      <div class="book_input"><%= f.text_area :body %></div>
    </div>

  <% else %>

    <div class="field">
      <span class="book">Title</span>
      <%= f.text_field :title %>
    </div>

    <div class="field">
      <span class="book">Body</span>
      <%= f.text_area :body %>
    </div>

  <% end %>

  <%= f.submit 'Create Book'%>

<% end %>
