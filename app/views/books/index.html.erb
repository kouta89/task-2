<!--index-->
<h1>Books</h1>

<table>

  <thead>
    <th>title</th>
    <th>body</th>
    <th colspan="3"></th>
  </thead>

</table>

<tbody>
    <% @books.each do |book| %>

      <span><%= book.title %></span>
      <span><%= book.body %></span>

      <!--showへ-->
      <%= link_to "show",show_book_path(book.id) %>
      <!--editへ-->
      <%= link_to "Edit", edit_book_path(book.id) %>
      <!--destroyへ-->
      <%= link_to "destroy", destroy_book_path(book.id),method: :delete,"data-confirm" => "Are you sure?" %>
      <br>

    <% end %>
  </tbody>


<!--new-->
<h2>New book</h2>

<%= form_with model: @book,url: '/books',method: :post do |f| %>

  <div class="field">
    <label for="book_title">title</label>

    <%= f.text_field :title %>
  </div>

  <div class="field">
    <label for="book_body">body</label>
    <%= f.text_area :body %>
  </div>

  <div class="actions">
    <%= f.submit 'Create Book'%>
  </div>
<% end %>
